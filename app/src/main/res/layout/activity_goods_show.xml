<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".goods.GoodsShowActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deepBlue">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_white2blue"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:text="编辑"
            android:textColor="@drawable/btn_text_white2blue"
            android:textSize="18sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ly_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="跑鞋"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@color/deepBlue"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ly_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/red_shoes"
                    android:layout_centerHorizontal="true"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_goods"
                    android:layout_alignBottom="@id/iv_goods"
                    android:src="@mipmap/photo"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
            </RelativeLayout>
            <!--    atb是属性的意思-->
            <LinearLayout
                android:id="@+id/ly_atb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_locat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="位置:"
                        android:textColor="@color/label"
                        android:textSize="18sp"/>
                    <EditText
                        android:id="@+id/et_locat"
                        android:layout_toRightOf="@+id/tv_locat"
                        android:layout_toLeftOf="@+id/btn_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:textIsSelectable="false"
                        android:background="@null"
                        android:textColor="@color/label"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="类别:"
                        android:textColor="@color/label"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/et_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toRightOf="@+id/tv_category"
                        android:gravity="center"
                        android:text="衣装打扮/鞋靴/跑鞋"
                        android:textColor="@color/label"
                        android:textSize="18sp" />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">
                    <Button
                        android:id="@+id/btn_add_line"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="@style/btn_add_blue"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>